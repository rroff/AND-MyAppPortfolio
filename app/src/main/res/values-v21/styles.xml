<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
    </style>
    <style name="TitleStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MainButtonStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:width">200dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F08C35</item>
    </style>
    <style name="CapstoneButtonStyle" parent="MainButtonStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#B02B3F</item>
    </style>
</resources>
